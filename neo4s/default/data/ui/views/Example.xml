<form>
  <label>Neo4j</label>
  <fieldset submitButton="true">
    <input type="text" token="query">
      <label>Query</label>
    </input>
    <input type="text" token="host">
      <label>Host</label>
      <default>host:7687</default>
    </input>
    <input type="text" token="username">
      <label>Username</label>
      <default></default>
    </input>
    <input type="text" token="password">
      <label>Password</label>
      <default></default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>| neo4j username="$username$" password="$password$" host="$host$" query="$query$" database="$database$" |</query>
          <earliest>0</earliest>
          <latest></latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>